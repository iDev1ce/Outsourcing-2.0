{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "strict": true,
    "strictPropertyInitialization": false,  
    "baseUrl": "./src",                       
    "paths": {
      "@app/*": ["app/*"],
      "@middlewares/*": ["middlewares/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"]
    },                          
    "esModuleInterop": true,                
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true
  }
}
